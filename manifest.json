{
  "manifest_version": 2,
  "name": "Symfony Environment Switcher",
  "version": "1.0",
  "description": "Switch between your symfony environments.",
  "icons": {
    "32": "icons/symfony.svg"
  },
  "permissions": [
    "*://*",
    "storage",
    "activeTab",
    "webRequestBlocking",
    "webRequest"
  ],
  "background": {
    "scripts": [
      "app.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/symfony.png",
    "default_title": "Symfony Environment Switcher",
    "default_popup": "popup/choose-mode.html"
  },
  "web_accessible_resources": [
    "icons/symfony.png",
    "icons/symfony-dev.png",
    "icons/symfony-xdebug.png"
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false
  }
}